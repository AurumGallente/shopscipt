<h1>Listing products</h1>
<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Article</th>
      <th>Dealerprice</th>
      <th>Dealercount</th>
      <th>Largeprice</th>
      <th>Largecount</th>
      <th>Smallprice</th>
      <th>Smallcount</th>
      <th>Retailprice</th>
      <th>Retailcount</th>
      <th>Stopprice</th>
      <th>Stopcount</th>
      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.article %></td>
        <td><%= product.dealerprice %></td>
        <td><%= product.dealercount %></td>
        <td><%= product.largeprice %></td>
        <td><%= product.largecount %></td>
        <td><%= product.smallprice %></td>
        <td><%= product.smallcount %></td>
        <td><%= product.retailprice %></td>
        <td><%= product.retailcount %></td>
        <td><%= product.stopprice %></td>
        <td><%= product.stopcount %></td>
        
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Product', new_product_path %>
